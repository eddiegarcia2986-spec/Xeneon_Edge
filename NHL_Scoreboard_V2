        label { font-size: 10px; color:#888; text-transform: uppercase; display: block; margin-bottom: 5px; font-weight: 700; }
        select { width: 100%; padding: 10px; background: #2a2a2a; color: white; border: 1px solid #444; margin-bottom: 10px; border-radius: 6px; }
        
        .slider-group { background: rgba(0,0,0,0.3); padding: 10px; border-radius: 8px; margin-bottom: 15px; }
