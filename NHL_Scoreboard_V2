        .btn-cancel { background: transparent; border: 1px solid #555; color: #aaa; }
        .btn-save { background: var(--accent); color: #000; border: 1px solid var(--accent); }

        @keyframes pulse { 0% { opacity: 1; } 50% { opacity: 0.3; } 100% { opacity: 1; } }
