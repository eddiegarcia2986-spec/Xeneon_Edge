<div id="settings-modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Configuration</h3>
            <span class="version-tag">v2.1.8.2</span>
        </div>
        
        <label>Favorite Teams</label>
        <select id="fav-1" class="team-opt"></select>
        <select id="fav-2" class="team-opt"></select>
        <select id="fav-3" class="team-opt"></select>

        <label style="display: flex; align-items: center; gap: 10px; margin: 15px 0; cursor: pointer;">
            <input type="checkbox" id="only-favs-check" style="width: auto; margin:0; accent-color: var(--accent);"> 
            <span style="font-size: 12px; color: #fff; text-transform: none;">Show Favorites Only</span>
        </label>

        <label>Theme Color (R / G / B)</label>
        <div class="slider-group">
            <div class="slider-row">
                <input type="range" id="r-range" min="0" max="255" oninput="liveUpdate()">
                <input type="range" id="g-range" min="0" max="255" oninput="liveUpdate()">
                <input type="range" id="b-range" min="0" max="255" oninput="liveUpdate()">
            </div>
            <label style="margin-top: 10px;">Color Intensity</label>
            <input type="range" id="intensity-range" min="0" max="100" style="width:100%" oninput="liveUpdate()">
        </div>

        <div class="modal-btns">
            <button class="btn-act btn-cancel" onclick="toggleSettings(false)">Cancel</button>
            <button class="btn-act btn-save" onclick="saveSettings()">Save & Close</button>
        </div>
    </div>
</div>

<script>
    const API = "https://site.api.espn.com/apis/site/v2/sports/hockey/nhl/scoreboard";
    const GAMES_PER_PAGE = 4; // Optimized for 2x2 grid
    const TEAMS = ["ANA","UTA","BOS","BUF","CGY","CAR","CHI","COL","CBJ","DAL","DET","EDM","FLA","LA","MIN","MTL","NSH","NJ","NYI","NYR","OTT","PHI","PIT","SJ","SEA","STL","TB","TOR","VAN","VGK","WSH","WPG"];

    let state = JSON.parse(localStorage.getItem('nhl_edge_v2')) || {
        favs: ["", "", ""],
        onlyFavs: false,
        rgb: { r: 30, g: 30, b: 30 },
        intensity: 0.2
    };

    let currentPage = 1;
    let cachedGames = [];

    function init() {
        populateOptions();
        applyVisuals(state.rgb.r, state.rgb.g, state.rgb.b, state.intensity);
        fetchData();
        setInterval(fetchData, 60000);
    }

    async function fetchData() {
        try {
            const res = await fetch(API);
            const data = await res.json();
            
            if (data.day) {
                const d = new Date(data.day.date + "T12:00:00");
                const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
                document.getElementById('current-date').innerText = d.toLocaleDateString('en-US', options);
            }

            let games = data.events || [];

            if (state.onlyFavs) {
                games = games.filter(g => g.competitions[0].competitors.some(c => state.favs.includes(c.team.abbreviation)));
            }

            // Sorting: Live > Favs > Pre > Post
            games.sort((a, b) => {
                const getScore = (g) => {
                    const isFav = g.competitions[0].competitors.some(c => state.favs.includes(c.team.abbreviation));
                    const status = g.status.type.state;
                    let s = 0;
                    if (isFav) s -= 100;
                    if (status === 'in') s -= 50;
                    if (status === 'pre') s += 10;
                    if (status === 'post') s += 20;
                    return s;
                };
                return getScore(a) - getScore(b);
            });

            // Live Count
            const liveCount = games.filter(g => g.status.type.state === 'in').length;
            const badge = document.getElementById('live-badge');
            if(liveCount > 0) {
                badge.classList.add('active');
                document.getElementById('live-count-text').innerText = `${liveCount} GAMES LIVE`;
            } else {
                badge.classList.remove('active');
            }

            cachedGames = games;
            render();
        } catch (e) {
            console.error("Fetch error", e);
        }
    }

    function render() {
        const board = document.getElementById('scoreboard');
        const totalPages = Math.ceil(cachedGames.length / GAMES_PER_PAGE) || 1;
        if (currentPage > totalPages) currentPage = totalPages;

        const start = (currentPage - 1) * GAMES_PER_PAGE;
        const pageItems = cachedGames.slice(start, start + GAMES_PER_PAGE);

        document.getElementById('page-indicator').innerText = `${currentPage} / ${totalPages}`;
        document.getElementById('prev-btn').disabled = currentPage === 1;
        document.getElementById('next-btn').disabled = currentPage === totalPages;

        if (pageItems.length === 0) {
            board.innerHTML = `<div style="grid-column: 1/-1; text-align: center; color: var(--text-sub); margin-top: 20px;">No games available based on current filters.</div>`;
            return;
        }

        board.innerHTML = pageItems.map(g => {
            const c = g.competitions[0];
            const home = c.competitors.find(x => x.homeAway === 'home');
            const away = c.competitors.find(x => x.homeAway === 'away');
            const isFav = c.competitors.some(x => state.favs.includes(x.team.abbreviation));
            const stateType = g.status.type.state; 
            
            // Status Text Logic
            let statusText = g.status.type.shortDetail;
            if (stateType === 'pre') {
                statusText = new Date(g.date).toLocaleTimeString([], {hour:'numeric', minute:'2-digit'});
            }

            const espnLink = g.links?.find(l => l.rel.includes('summary'))?.href || '#';

            return `
                <a href="${espnLink}" target="_blank" class="game-link">
                    <div class="game-card ${isFav ? 'favorite-game' : ''}">
                        <div class="game-status">${statusText}</div>
                        
                        <div class="team-row">
                            <div class="team-info">
                                <img src="https://a.espncdn.com/i/teamlogos/nhl/500/${away.team.abbreviation}.png" class="team-logo" onerror="this.style.opacity=0">
                                <span class="team-name">${away.team.abbreviation}</span>
                            </div>
                            <span class="score">${stateType === 'pre' ? '' : away.score}</span>
                        </div>

                        <div class="team-row">
                            <div class="team-info">
                                <img src="https://a.espncdn.com/i/teamlogos/nhl/500/${home.team.abbreviation}.png" class="team-logo" onerror="this.style.opacity=0">
                                <span class="team-name">${home.team.abbreviation}</span>
                            </div>
                            <span class="score">${stateType === 'pre' ? '' : home.score}</span>
                        </div>
                    </div>
                </a>
            `;
        }).join('');
    }

    function changePage(d) { currentPage += d; render(); }
    
    function toggleSettings(s) { document.getElementById('settings-modal').style.display = s ? 'flex' : 'none'; }
    
    function liveUpdate() {
        applyVisuals(
            document.getElementById('r-range').value,
            document.getElementById('g-range').value,
            document.getElementById('b-range').value,
            document.getElementById('intensity-range').value / 100
        );
    }

    function applyVisuals(r, g, b, i) {
        const root = document.documentElement;
        root.style.setProperty('--bg-r', r);
        root.style.setProperty('--bg-g', g);
        root.style.setProperty('--bg-b', b);
        
        const lum = (0.299*r + 0.587*g + 0.114*b)/255;
        if (lum > 0.55) {
            root.style.setProperty('--text-main', '#000');
            root.style.setProperty('--text-sub', 'rgba(0,0,0,0.65)');
            root.style.setProperty('--card-bg', 'rgba(255,255,255,0.5)');
        } else {
            root.style.setProperty('--text-main', '#fff');
            root.style.setProperty('--text-sub', 'rgba(255,255,255,0.65)');
            root.style.setProperty('--card-bg', 'rgba(0,0,0,0.45)');
        }
    }

    function saveSettings() {
        state.favs = [1,2,3].map(n => document.getElementById(`fav-${n}`).value);
        state.onlyFavs = document.getElementById('only-favs-check').checked;
        state.rgb = {
            r: document.getElementById('r-range').value,
            g: document.getElementById('g-range').value,
            b: document.getElementById('b-range').value
        };
        state.intensity = document.getElementById('intensity-range').value / 100;
        localStorage.setItem('nhl_edge_v2', JSON.stringify(state));
        toggleSettings(false);
        fetchData();
    }

    function populateOptions() {
        const opts = `<option value="">-- None --</option>` + TEAMS.sort().map(t => `<option value="${t}">${t}</option>`).join('');
        [1,2,3].forEach((n, i) => {
            const el = document.getElementById(`fav-${n}`);
            el.innerHTML = opts;
            el.value = state.favs[i] || "";
        });
        document.getElementById('only-favs-check').checked = state.onlyFavs;
        document.getElementById('r-range').value = state.rgb.r;
        document.getElementById('g-range').value = state.rgb.g;
        document.getElementById('b-range').value = state.rgb.b;
        document.getElementById('intensity-range').value = state.intensity * 100;
    }

    init();
</script>
</body>
</html>
