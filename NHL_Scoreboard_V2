    <style>
        :root {
            --bg-r: 30; --bg-g: 30; --bg-b: 30;
            --intensity: 0.2;
            --bg-color: rgb(var(--bg-r), var(--bg-g), var(--bg-b));
            --text-main: #ffffff;
            --text-sub: rgba(255, 255, 255, 0.7);
            --card-bg: rgba(0, 0, 0, 0.4);
            --border-color: rgba(255, 255, 255, 0.15);
            --accent: #00d2be;
        }

        body {
            margin: 0; padding: 0; 
            background-color: var(--bg-color); 
            color: var(--text-main);
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            transition: background-color 0.3s ease;
            min-height: 100vh;
            display: flex; flex-direction: column;
        }

        #widget-container { padding: 20px; max-width: 1000px; margin: auto; flex-grow: 1; width: 100%; box-sizing: border-box; }

        header {
            display: flex; justify-content: space-between; align-items: flex-end;
            margin-bottom: 20px; padding-bottom: 12px; 
            border-bottom: 2px solid var(--border-color);
        }

        .header-left h2 { margin: 0; font-size: 1.5rem; }
        .attribution { font-size: 10px; color: var(--text-sub); display: flex; align-items: center; gap: 5px; margin-top: 5px; }
        .attribution img { height: 12px; opacity: 0.8; }

        #scoreboard {
            display: grid; 
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); 
            gap: 20px;
            min-height: 200px;
        }

        /* Game Card as a Link */
        .game-link { text-decoration: none; color: inherit; display: block; outline: none; }
        
        .game-card {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 12px; padding: 16px;
            backdrop-filter: blur(12px);
            position: relative;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            cursor: pointer;
        }
        .game-card:hover { transform: translateY(-3px); box-shadow: 0 8px 20px rgba(0,0,0,0.3); }

        .game-card.favorite-game { 
            border: 2px solid var(--accent); 
            background: linear-gradient(145deg, var(--card-bg), rgba(var(--bg-r), var(--bg-g), var(--bg-b), var(--intensity)));
        }

        .minimize-btn {
            position: absolute; top: 12px; right: 12px;
            background: var(--border-color); border: none;
            color: var(--text-main); cursor: pointer; border-radius: 4px; padding: 2px 8px; font-weight: bold;
            z-index: 10;
        }

        .game-status { font-size: 11px; color: var(--accent); font-weight: 900; letter-spacing: 1px; text-transform: uppercase; display: flex; align-items: center; gap: 5px; }
        .live-dot { height: 6px; width: 6px; background: var(--accent); border-radius: 50%; display: inline-block; animation: pulse 1.5s infinite; }
        
        @keyframes pulse { 0% { opacity: 1; } 50% { opacity: 0.3; } 100% { opacity: 1; } }

        .team-row { display: flex; justify-content: space-between; align-items: center; margin: 8px 0; }
        .team-info { display: flex; align-items: center; gap: 12px; }
        .team-logo { width: 32px; height: 32px; object-fit: contain; }
        .team-name { font-weight: 700; font-size: 1.1rem; }
        .score { font-size: 1.5rem; font-weight: 800; font-variant-numeric: tabular-nums; }

        /* Pagination Navigation */
        .pagination-wrap {
            display: flex; justify-content: center; align-items: center; flex-direction: column;
            gap: 15px; margin-top: 30px; padding-bottom: 40px;
        }
        .nav-controls { display: flex; align-items: center; gap: 15px; }
        .page-btn {
            background: var(--card-bg); border: 1px solid var(--border-color);
            color: var(--text-main); padding: 8px 16px; border-radius: 8px;
            cursor: pointer; font-weight: bold; transition: all 0.2s;
        }
        .page-btn:disabled { opacity: 0.2; cursor: not-allowed; }
        .page-btn:hover:not(:disabled) { background: var(--accent); color: #000; }
        
        .live-count-badge {
            background: rgba(0, 210, 190, 0.15); color: var(--accent);
            padding: 4px 10px; border-radius: 20px; font-size: 11px; font-weight: bold;
            border: 1px solid var(--accent);
        }

        /* Settings Modal */
        #settings-modal {
            display: none; position: fixed; inset: 0; 
            background: rgba(0,0,0,0.8); backdrop-filter: blur(8px);
            z-index: 9999; justify-content: center; align-items: center;
        }
        .modal-content {
            background: var(--bg-color); border: 2px solid var(--border-color);
            color: var(--text-main); padding: 25px; border-radius: 20px; width: 380px;
            max-height: 90vh; overflow-y: auto;
        }
        .setting-section { margin-bottom: 18px; padding: 10px; border-radius: 10px; background: rgba(255,255,255,0.05); }
        label { display: block; font-size: 10px; text-transform: uppercase; color: var(--text-sub); margin-bottom: 6px; font-weight: bold; }
        select { width: 100%; padding: 8px; margin-bottom: 6px; background: rgba(0,0,0,0.2); color: var(--text-main); border: 1px solid var(--border-color); border-radius: 6px; }

        .btn-group { display: flex; gap: 10px; margin-top: 15px; }
