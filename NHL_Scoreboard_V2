<body>

<div id="widget-container">
    <header>
        <div class="header-left">
            <h2>NHL Scoreboard</h2>
            <div id="current-date" style="font-size: 13px; opacity: 0.7;">...</div>
            <div class="attribution">
                Powered by 
                <a href="https://www.espn.com/nhl/" target="_blank">
                    <img src="https://a.espncdn.com/redesign/assets/img/logos/espn-404@2x.png" alt="ESPN">
                </a>
            </div>
        </div>
        <button class="page-btn" onclick="toggleSettings(true)">⚙ Settings</button>
    </header>
    
    <div id="scoreboard"></div>

    <div class="pagination-wrap">
        <div id="live-counter-wrap"></div>
        <div class="nav-controls">
            <button id="prev-btn" class="page-btn" onclick="changePage(-1)">←</button>
            <span id="page-info" style="font-weight: bold; min-width: 80px; text-align: center;">Page 1</span>
            <button id="next-btn" class="page-btn" onclick="changePage(1)">→</button>
        </div>
    </div>
</div>

<div id="settings-modal">
    <div class="modal-content">
        <h3 style="margin:0 0 15px 0">Options</h3>
        <div class="setting-section">
            <label>Priority Teams</label>
            <select id="fav-1" class="team-opt"></select>
            <select id="fav-2" class="team-opt"></select>
            <select id="fav-3" class="team-opt"></select>
            <label style="display: flex; align-items: center; gap: 8px; text-transform: none; margin-top: 8px;">
                <input type="checkbox" id="only-favs-check"> Only show priority teams
            </label>
        </div>
        <div class="setting-section">
            <label>Colors</label>
            <input type="range" id="r-range" min="0" max="255" value="30" oninput="liveUpdate()" style="width:100%">
            <input type="range" id="g-range" min="0" max="255" value="30" oninput="liveUpdate()" style="width:100%">
            <input type="range" id="b-range" min="0" max="255" value="30" oninput="liveUpdate()" style="width:100%">
            <label>Intensity</label>
            <input type="range" id="intensity-range" min="0" max="100" value="20" oninput="liveUpdate()" style="width:100%">
        </div>
        <div class="btn-group">
            <button class="action" style="background:rgba(255,255,255,0.1); color:white" onclick="toggleSettings(false)">Cancel</button>
            <button class="action" style="background:var(--accent); color:black" onclick="saveSettings()">Save</button>
        </div>
    </div>
</div>

<script>
    const API = "https://site.api.espn.com/apis/site/v2/sports/hockey/nhl/scoreboard";
    const GAMES_PER_PAGE = 3;
    
    let state = JSON.parse(localStorage.getItem('nhl_v6_state')) || {
        favs: ["", "", ""],
        onlyFavs: false,
        rgb: { r: 30, g: 30, b: 30 },
        intensity: 0.2,
        minimized: []
    };

    let currentPage = 1;
    let cachedGames = [];
    let liveCount = 0;

    const TEAMS = ["ANA","UTA","BOS","BUF","CGY","CAR","CHI","COL","CBJ","DAL","DET","EDM","FLA","LA","MIN","MTL","NSH","NJ","NYI","NYR","OTT","PHI","PIT","SJ","SEA","STL","TB","TOR","VAN","VGK","WSH","WPG"];

    function init() {
        populateDropdowns();
        applyVisuals(state.rgb.r, state.rgb.g, state.rgb.b, state.intensity);
        refreshData();
        setInterval(refreshData, 60000);
    }

    function applyVisuals(r, g, b, intensity) {
        const lum = (0.2126 * r + 0.7152 * g + 0.0722 * b) / 255;
        const root = document.documentElement;
        root.style.setProperty('--bg-r', r);
        root.style.setProperty('--bg-g', g);
        root.style.setProperty('--bg-b', b);
        root.style.setProperty('--intensity', intensity);
        if (lum > 0.55) {
            root.style.setProperty('--text-main', '#000000');
            root.style.setProperty('--text-sub', 'rgba(0, 0, 0, 0.6)');
            root.style.setProperty('--card-bg', 'rgba(255, 255, 255, 0.4)');
            root.style.setProperty('--border-color', 'rgba(0, 0, 0, 0.15)');
        } else {
            root.style.setProperty('--text-main', '#ffffff');
            root.style.setProperty('--text-sub', 'rgba(255, 255, 255, 0.7)');
            root.style.setProperty('--card-bg', 'rgba(0, 0, 0, 0.35)');
            root.style.setProperty('--border-color', 'rgba(255, 255, 255, 0.15)');
        }
    }

    async function refreshData() {
        try {
            const res = await fetch(API);
            const data = await res.json();
            if (data.day) document.getElementById('current-date').innerText = new Date(data.day.date + "T12:00:00").toLocaleDateString('en-US', { weekday: 'long', month: 'long', day: 'numeric' });
            
            let games = data.events || [];
            liveCount = games.filter(g => g.status.type.state === 'in').length;

            if (state.onlyFavs) {
                games = games.filter(g => g.competitions[0].competitors.some(c => state.favs.includes(c.team.abbreviation)));
            }

            games.sort((a, b) => {
                const getRank = (g) => {
                    const isFav = g.competitions[0].competitors.some(c => state.favs.includes(c.team.abbreviation));
                    const status = g.status.type.state;
                    let score = isFav ? -100 : 0;
                    if (status === 'in') score += 1;
                    if (status === 'pre') score += 2;
                    if (status === 'post') score += 3;
                    return score;
                };
                return getRank(a) - getRank(b);
            });

            cachedGames = games;
            renderPage();
        } catch (e) { console.error(e); }
    }

    function renderPage() {
        const board = document.getElementById('scoreboard');
        const totalPages = Math.ceil(cachedGames.length / GAMES_PER_PAGE) || 1;
        if (currentPage > totalPages) currentPage = totalPages;

        const start = (currentPage - 1) * GAMES_PER_PAGE;
        const pageItems = cachedGames.slice(start, start + GAMES_PER_PAGE);

        document.getElementById('page-info').innerText = `Page ${currentPage} / ${totalPages}`;
        document.getElementById('prev-btn').disabled = currentPage === 1;
        document.getElementById('next-btn').disabled = currentPage === totalPages;
        
        const counterWrap = document.getElementById('live-counter-wrap');
        counterWrap.innerHTML = liveCount > 0 ? `<div class="live-count-badge"><span class="live-dot"></span> ${liveCount} GAMES LIVE</div>` : '';

        board.innerHTML = pageItems.map(g => {
            const comp = g.competitions[0];
            const home = comp.competitors.find(c => c.homeAway === 'home');
            const away = comp.competitors.find(c => c.homeAway === 'away');
            const isFav = comp.competitors.some(c => state.favs.includes(c.team.abbreviation));
            const isMin = state.minimized.includes(g.id);
            const isInProgress = g.status.type.state === 'in';
            const statusText = g.status.type.state === 'pre' ? 
                new Date(g.date).toLocaleTimeString([], {hour:'numeric', minute:'2-digit'}) : 
                g.status.type.shortDetail;

            // Link to ESPN Gamecast
            const espnLink = g.links.find(l => l.rel.includes('summary'))?.href || `https://www.espn.com/nhl/game/_/gameId/${g.id}`;

            return `
                <a href="${espnLink}" target="_blank" class="game-link">
                    <div class="game-card ${isFav ? 'favorite-game' : ''} ${isMin ? 'minimized' : ''}">
                        <button class="minimize-btn" onclick="event.preventDefault(); toggleMin('${g.id}')">${isMin ? '⤢' : '⤡'}</button>
                        <div class="game-status">
                            ${isInProgress ? '<span class="live-dot"></span>' : ''}
                            ${statusText}
                        </div>
                        <div class="team-row">
                            <div class="team-info">
                                <img src="https://a.espncdn.com/i/teamlogos/nhl/500/${away.team.abbreviation}.png" class="team-logo">
                                <span class="team-name">${away.team.abbreviation}</span>
                            </div>
                            <span class="score">${g.status.type.state === 'pre' ? '-' : away.score}</span>
                        </div>
                        <div class="team-row">
                            <div class="team-info">
                                <img src="https://a.espncdn.com/i/teamlogos/nhl/500/${home.team.abbreviation}.png" class="team-logo">
                                <span class="team-name">${home.team.abbreviation}</span>
                            </div>
                            <span class="score">${g.status.type.state === 'pre' ? '-' : home.score}</span>
                        </div>
                    </div>
                </a>
            `;
        }).join('');
    }

    function changePage(delta) { currentPage += delta; renderPage(); }
    function toggleMin(id) {
        state.minimized = state.minimized.includes(id) ? state.minimized.filter(x => x !== id) : [...state.minimized, id];
        localStorage.setItem('nhl_v6_state', JSON.stringify(state));
        renderPage();
    }
    function toggleSettings(show) { document.getElementById('settings-modal').style.display = show ? 'flex' : 'none'; }
    function populateDropdowns() {
        document.querySelectorAll('.team-opt').forEach((s, i) => {
            s.innerHTML = `<option value="">None</option>` + TEAMS.sort().map(t => `<option value="${t}" ${state.favs[i] === t ? 'selected' : ''}>${t}</option>`).join('');
        });
        document.getElementById('only-favs-check').checked = state.onlyFavs;
    }
    function saveSettings() {
        state.favs = [document.getElementById('fav-1').value, document.getElementById('fav-2').value, document.getElementById('fav-3').value];
        state.onlyFavs = document.getElementById('only-favs-check').checked;
        state.rgb = { r: parseInt(document.getElementById('r-range').value), g: parseInt(document.getElementById('g-range').value), b: parseInt(document.getElementById('b-range').value) };
        state.intensity = document.getElementById('intensity-range').value / 100;
        localStorage.setItem('nhl_v6_state', JSON.stringify(state));
        currentPage = 1;
        toggleSettings(false);
        refreshData();
    }
    function liveUpdate() {
        applyVisuals(document.getElementById('r-range').value, document.getElementById('g-range').value, document.getElementById('b-range').value, document.getElementById('intensity-range').value / 100);
    }
    init();
</script>
</body>
</html>
