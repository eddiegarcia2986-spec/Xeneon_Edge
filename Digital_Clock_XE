        }
        @media (orientation: portrait) {
            #app-container { flex-direction: column; }
            #time-display { font-size: 18vmin; }
            #tools-section { flex: 1; max-width: 100%; }
            .tool-header { display: none; } /* Save vertical space */
            .tool-card { padding: 1vmin; }
        }
