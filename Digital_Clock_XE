        .theme-ball.selected { border-color: #fff; transform: scale(1.1); box-shadow: 0 0 10px var(--highlight); }
        .slice { width: 33.33%; height: 100%; float: left; }
        
        .setting-row { margin-bottom: 15px; }
        .setting-row label { display: block; font-size: 0.8rem; color: #aaa; margin-bottom: 5px; text-transform: uppercase; }
        select, input[type=range] { width: 100%; padding: 8px; background: #333; border: 1px solid #444; color: #fff; border-radius: 4px; }
        
        /* --- Responsive Logic --- */
        @media (orientation: landscape) {
