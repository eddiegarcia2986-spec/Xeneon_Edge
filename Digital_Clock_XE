<script>
    // --- STATE & CONFIG ---
    const themes = [
        { name: "Gunmetal", p: "#e0e0e0", s: "#4a4a4a", h: "#00d2be", bg: "#1e1e1e" },
        { name: "Red", p: "#fff", s: "#4a1a1a", h: "#ff4d4d", bg: "#1a0505" },
        { name: "Blue", p: "#e0f7fa", s: "#0d47a1", h: "#40c4ff", bg: "#001020" },
        { name: "Green", p: "#e8f5e9", s: "#1b5e20", h: "#69f0ae", bg: "#051a05" },
        { name: "Orange", p: "#fff3e0", s: "#e65100", h: "#ffab40", bg: "#201000" },
        { name: "Purple", p: "#f3e5f5", s: "#4a148c", h: "#e040fb", bg: "#150520" },
        { name: "Mono", p: "#fff", s: "#333", h: "#888", bg: "#000" },
        { name: "Gold", p: "#fff8e1", s: "#5d4037", h: "#ffd700", bg: "#1e1e1e" },
        { name: "Neon", p: "#fff", s: "#222", h: "#00ff00", bg: "#111" },
        { name: "Cyber", p: "#0ff", s: "#003333", h: "#f0f", bg: "#000510" },
        { name: "Slate", p: "#eceff1", s: "#37474f", h: "#90a4ae", bg: "#263238" },
        { name: "Mint", p: "#e0f2f1", s: "#004d40", h: "#1de9b6", bg: "#00251a" },
        { name: "Pink", p: "#fce4ec", s: "#880e4f", h: "#ff4081", bg: "#2a0010" },
        { name: "OLED", p: "#ddd", s: "#111", h: "#fff", bg: "#000000" },
        { name: "Navy", p: "#e3f2fd", s: "#1a237e", h: "#536dfe", bg: "#0d1b2a" }
    ];

    let state = {
        themeIdx: 0,
        opacity: 100,
        timeFmt: "12",
        dateFmt: "full",
        alarms: []
    };

    // Timer Vars
    let tTime = { h:0, m:0, s:0 };
    let tInterval = null;
    let tRunning = false;

    // Alarm Editor Vars
    let editAlarm = { h:8, m:0, ampm:'AM', labelIdx:0 };
    const labels = ["Work", "Gaming", "Nap", "Meeting", "Gym", "Wake Up"];

    // --- INIT ---
    function init() {
        const saved = localStorage.getItem('xeneon_clock_v2');
        if(saved) state = JSON.parse(saved);
        
        setupThemes();
        applyState();
        renderAlarms();
        
        setInterval(tick, 1000);
        tick();
    }

    function tick() {
        const now = new Date();
        
        // Clock
        let h = now.getHours();
        const m = String(now.getMinutes()).padStart(2,'0');
        let am = "";
        
        if(state.timeFmt === "12") {
            am = h >= 12 ? "PM" : "AM";
            h = h % 12 || 12;
        }
        document.getElementById('t-digits').innerText = `${String(h).padStart(2,'0')}:${m}`;
        document.getElementById('ampm').innerText = am;
        
        // Date
        const opts = state.dateFmt === 'full' ? {weekday:'long', month:'long', day:'numeric'} : 
                     state.dateFmt === 'short' ? {weekday:'short', month:'short', day:'numeric'} : 
                     {month:'numeric', day:'numeric', year:'numeric'};
        let ds = now.toLocaleDateString('en-US', opts);
        if(state.dateFmt === 'full') ds = ds.replace(',', ' |');
        document.getElementById('date-display').innerText = ds;

        // Check Alarms
        if(now.getSeconds() === 0) {
            state.alarms.forEach(a => {
                if(a.active && a.h === now.getHours() && a.m === now.getMinutes()) {
                    // Visual Flash
                    document.body.style.backgroundColor = 'var(--highlight)';
                    setTimeout(() => applyState(), 1000);
                    alert(`ALARM: ${a.label}`);
                    a.active = false;
                    renderAlarms();
                }
            });
        }
    }

    // --- TIMER ---
    function adjTimer(u, d) {
        if(tRunning) return;
        if(u==='h') tTime.h = Math.max(0, Math.min(99, tTime.h + d));
        if(u==='m') tTime.m = Math.max(0, Math.min(59, tTime.m + d));
        if(u==='s') tTime.s = Math.max(0, Math.min(59, tTime.s + d));
        drawTimer();
    }

    function drawTimer() {
        ['h','m','s'].forEach(k => document.getElementById(`tm-${k}`).innerText = String(tTime[k]).padStart(2,'0'));
    }

    function toggleTimer() {
        const btn = document.getElementById('btn-start');
        if(tRunning) {
            clearInterval(tInterval);
            tRunning = false;
            btn.innerText = "▶";
            btn.classList.remove('active');
        } else {
            if(tTime.h===0 && tTime.m===0 && tTime.s===0) return;
            tRunning = true;
            btn.innerText = "||";
            btn.classList.add('active');
            tInterval = setInterval(() => {
                if(tTime.s>0) tTime.s--;
                else if(tTime.m>0) { tTime.m--; tTime.s=59; }
                else if(tTime.h>0) { tTime.h--; tTime.m=59; tTime.s=59; }
                else { toggleTimer(); alert("Timer Done!"); }
                drawTimer();
            }, 1000);
        }
    }

    function resetTimer() {
        if(tRunning) toggleTimer();
        tTime = { h:0, m:0, s:0 };
        drawTimer();
    }

    // --- ALARM EDITOR (CONTEXTUAL) ---
    function showAlarmEditor() {
        // Reset editor defaults
        const now = new Date();
        editAlarm.h = now.getHours();
        editAlarm.m = now.getMinutes();
        editAlarm.labelIdx = 0;
        
        drawEditor();
        document.getElementById('alarm-editor-view').classList.add('visible');
    }

    function hideAlarmEditor() {
        document.getElementById('alarm-editor-view').classList.remove('visible');
    }

    function adjAlarm(u, d) {
        if(u==='h') {
            editAlarm.h += d;
            if(editAlarm.h > 23) editAlarm.h = 0;
            if(editAlarm.h < 0) editAlarm.h = 23;
        }
        if(u==='m') {
            editAlarm.m += d * 5; // 5 min increments for speed
            if(editAlarm.m > 55) editAlarm.m = 0;
            if(editAlarm.m < 0) editAlarm.m = 55;
        }
        drawEditor();
    }

    function toggleNewAmpm() {
        // Simple toggle by adding/subtracting 12 hours
        if(editAlarm.h < 12) editAlarm.h += 12;
        else editAlarm.h -= 12;
        drawEditor();
    }

    function cycleLabel() {
        editAlarm.labelIdx = (editAlarm.labelIdx + 1) % labels.length;
        drawEditor();
    }

    function drawEditor() {
        let displayH = editAlarm.h;
        let ampm = "";
        
        const is12 = state.timeFmt === "12";
        document.getElementById('new-ampm-box').style.display = is12 ? 'flex' : 'none';

        if(is12) {
            ampm = displayH >= 12 ? "PM" : "AM";
            displayH = displayH % 12 || 12;
        }

        document.getElementById('new-h').innerText = String(displayH).padStart(2,'0');
        document.getElementById('new-m').innerText = String(editAlarm.m).padStart(2,'0');
        document.getElementById('new-ampm').innerText = ampm;
        document.getElementById('new-label').innerText = "Label: " + labels[editAlarm.labelIdx];
    }

    function saveNewAlarm() {
        state.alarms.push({
            h: editAlarm.h,
            m: editAlarm.m,
            label: labels[editAlarm.labelIdx],
            active: true
        });
        saveState();
        renderAlarms();
        hideAlarmEditor();
    }

    // --- ALARM LIST ---
    function renderAlarms() {
        const list = document.getElementById('alarm-items');
        list.innerHTML = '';
        
        if(state.alarms.length === 0) {
            list.innerHTML = `<div style="text-align:center; opacity:0.3; margin-top:20px; font-size:1.5vmin">NO ALARMS SET</div>`;
            return;
        }

        state.alarms.forEach((a, i) => {
            let dH = a.h;
            let suf = "";
            if(state.timeFmt === "12") {
                suf = dH >= 12 ? " PM" : " AM";
                dH = dH % 12 || 12;
            }
            
            const row = document.createElement('div');
            row.className = `alarm-row ${a.active?'active':''}`;
            row.innerHTML = `
                <div>
                    <div class="ar-time">${String(dH).padStart(2,'0')}:${String(a.m).padStart(2,'0')}${suf}</div>
                    <div class="ar-label">${a.label}</div>
                </div>
                <div class="ar-controls">
                    <button class="text-btn ${a.active?'on':''}" onclick="togAlarm(${i})">${a.active?'ON':'OFF'}</button>
                    <button class="text-btn" onclick="delAlarm(${i})">✕</button>
                </div>
            `;
            list.appendChild(row);
        });
    }

    window.togAlarm = (i) => { state.alarms[i].active = !state.alarms[i].active; saveState(); renderAlarms(); };
    window.delAlarm = (i) => { state.alarms.splice(i,1); saveState(); renderAlarms(); };

    // --- SETTINGS ---
    function openSettings() { 
        document.getElementById('settings-modal').style.display = 'flex';
        document.getElementById('op-range').value = state.opacity;
        document.getElementById('fmt-time').value = state.timeFmt;
        document.getElementById('fmt-date').value = state.dateFmt;
    }
    function closeSettings() { document.getElementById('settings-modal').style.display = 'none'; }
    
    function updSettings() {
        state.opacity = document.getElementById('op-range').value;
        state.timeFmt = document.getElementById('fmt-time').value;
        state.dateFmt = document.getElementById('fmt-date').value;
        applyState();
        tick(); // instant update
        drawEditor(); // update editor format if open
        renderAlarms(); // update list format
    }

    function setupThemes() {
        const grid = document.getElementById('theme-grid');
        themes.forEach((t, i) => {
            const b = document.createElement('div');
            b.className = `theme-ball ${i===state.themeIdx ? 'selected':''}`;
            b.innerHTML = `<div class="slice" style="background:${t.p}"></div><div class="slice" style="background:${t.s}"></div><div class="slice" style="background:${t.h}"></div>`;
            b.onclick = () => { state.themeIdx = i; setupThemes(); applyState(); };
            grid.appendChild(b);
        });
    }

    function applyState() {
        const t = themes[state.themeIdx];
        const r = document.documentElement.style;
        r.setProperty('--primary', t.p);
        r.setProperty('--secondary', t.s);
        r.setProperty('--highlight', t.h);
        r.setProperty('--bg-color', t.bg);
        
        const rgb = hexToRgb(t.bg);
        document.body.style.backgroundColor = `rgba(${rgb.r},${rgb.g},${rgb.b},${state.opacity/100})`;
        saveState();
    }

    function saveState() { localStorage.setItem('xeneon_clock_v2', JSON.stringify(state)); }
    function hexToRgb(hex) {
        const r = parseInt(hex.slice(1,3),16), g = parseInt(hex.slice(3,5),16), b = parseInt(hex.slice(5,7),16);
        return {r,g,b};
    }

    init();
</script>
</body>
</html>
