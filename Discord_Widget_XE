<script>
    function updateClock() {
        const now = new Date();
        const tStr = now.toLocaleTimeString([], { hour: 'numeric', minute: '2-digit', hour12: true });
        const dStr = now.toLocaleDateString([], { weekday: 'short', month: 'short', day: 'numeric' });
        document.getElementById('clock').innerText = `${dStr} | ${tStr}`;
    }
    setInterval(updateClock, 1000);
    updateClock();
</script>

